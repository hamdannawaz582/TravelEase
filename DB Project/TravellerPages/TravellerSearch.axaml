<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DB_Project.TravellerPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DB_Project.TravellerPages.TripSearchPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Search Header -->
        <TextBlock Grid.Row="0" Text="Find Your Perfect Trip" 
                   FontSize="28" Margin="15"/>
        
        <!-- Search Controls -->
        <Border Grid.Row="1" Background="#2a2a3a" Margin="10" 
                CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Row 1 -->
                <TextBox Grid.Row="0" Grid.Column="0" Margin="5" 
                         Watermark="Destination" Name="DestinationBox"/>
                <DatePicker Grid.Row="0" Grid.Column="1" Margin="5" 
                            Name="StartDatePicker"/>
                <DatePicker Grid.Row="0" Grid.Column="2" Margin="5" 
                            Name="EndDatePicker"/>
                
                <!-- Row 2 -->
                <ComboBox Grid.Row="1" Grid.Column="0" Margin="5" 
                          Name="TripTypeCombo" PlaceholderText="Trip Type">
                    <ComboBoxItem>Adventure</ComboBoxItem>
                    <ComboBoxItem>Cultural</ComboBoxItem>
                    <ComboBoxItem>Leisure</ComboBoxItem>
                </ComboBox>
                <Slider Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                        Minimum="100" Maximum="10000" Name="PriceSlider" 
                        Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Name="PriceDisplay" 
                           VerticalAlignment="Center"/>
                
                <!-- Row 3 -->
                <Button Grid.Row="2" Grid.Column="3" Content="Search" 
                        Click="OnSearchClicked" Margin="5"/>
            </Grid>
        </Border>
        
        <!-- Search Results -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl Name="SearchResultsControl" Margin="10" d:DataContext="{d:DesignInstance local:TripSearchResult}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2a2a3a" Margin="0,0,0,10" 
                                CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image Grid.Column="0" Width="150" Height="100"
                                       Source="{Binding ImagePath}" Margin="0,0,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Destination}"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap" Opacity="0.7"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <TextBlock Text="Duration: "/>
                                        <TextBlock Text="{Binding Duration}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Width="120">
                                    <TextBlock Text="{Binding Price}"
                                               FontSize="18" FontWeight="Bold"
                                               HorizontalAlignment="Right"/>
                                    <Button Content="View Details" Margin="0,10"
                                            HorizontalAlignment="Right"/>
                                    <Button Content="Book"
                                            HorizontalAlignment="Right"
                                            Background="#3E8853"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>