<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DB_Project"
             xmlns:pages="clr-namespace:DB_Project.TravellerPages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="DB_Project.TravellerPages.TravellerDashboard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Name="WelcomeMessage" 
                       FontSize="32" Margin="15"/>
            <Image Grid.Column="1" Source="../Assets/User.png" 
                   Width="32" Height="32" Margin="15"/>
        </Grid>
        
        <!-- Dashboard content -->
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Upcoming Trips -->
                <Border Grid.Row="0" Background="#2a2a3a" Margin="10" 
                        CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Upcoming Trips" 
                                   FontSize="24" Margin="0,0,0,10"/>
                        <ItemsControl Grid.Row="1" Name="UpcomingTripsControl" 
                                      d:DataContext="{d:DesignInstance pages:TripItem}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Trip item template -->
                                    <Border Background="#353545" Margin="5" 
                                            CornerRadius="4" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Image Grid.Column="0" Width="80"
                                                   Height="60" Margin="0,0,10,0"
                                                   Source="{Binding ImagePath}"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Destination}"
                                                           FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Date}"
                                                           Opacity="0.7"/>
                                                <TextBlock Text="{Binding Status}"
                                                           Foreground="Green"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="Details"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Travel Pass -->
                <Border Grid.Row="1" Background="#2a2a3a" Margin="10" 
                        CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Digital Travel Pass" 
                                   FontSize="24" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" 
                                   Text="Access your e-tickets and passes here" 
                                   Margin="0,15" Opacity="0.7"/>
                    </Grid>
                </Border>
                
                <!-- Profile Summary -->
                <Border Grid.Row="2" Background="#2a2a3a" Margin="10" 
                        CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Profile Summary" 
                                   FontSize="24" Margin="0,0,0,10"/>
                        <StackPanel Grid.Row="1">
                            <TextBlock Name="UsernameBlock" Margin="0,5"/>
                            <TextBlock Name="TripCountBlock" Margin="0,5"/>
                            <TextBlock Name="MemberSinceBlock" Margin="0,5"/>
                            <Button Content="Edit Profile" 
                                    HorizontalAlignment="Left" Margin="0,10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>