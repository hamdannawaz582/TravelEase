<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DB_Project.AdminPages"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="DB_Project.AdminPages.AdminReviews"
             x:DataType="local:ReviewViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Review Management" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="View, filter, and manage user reviews" FontSize="16" Margin="0,0,0,20"/>
            
            <!-- Filter Controls -->
            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <CheckBox Name="FlaggedOnlyCheckBox" Content="Show only inappropriate content"/>
                    <Button Content="Apply Filter" Click="ApplyFilter_Click" Width="100"/>
                    <Button Content="Refresh" Click="Refresh_Click" Width="80"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2" Name="ReviewCountText" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
        
        <!-- Reviews Data Grid -->
        <DataGrid Grid.Row="1" Name="ReviewsDataGrid" 
                  IsReadOnly="True" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionChanged="ReviewsDataGrid_SelectionChanged"
                  Background="#2d2d2d"
                  BorderThickness="1"
                  BorderBrush="#3c3c3c">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ReviewID}" Width="60"/>
                <DataGridTextColumn Header="Reviewer" Binding="{Binding Reviewer}" Width="120"/>
                <DataGridTextColumn Header="Date" Binding="{Binding FormattedDate}" Width="120"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Stars}" Width="70"/>
                <DataGridTextColumn Header="Content" Binding="{Binding FeedbackSummary}" Width="*"/>
                <DataGridTemplateColumn Header="Flags" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:ReviewViewModel}">
                            <Border CornerRadius="4" Padding="5,2" Margin="2" 
                                    Background="{Binding FlagColor}">
                                <TextBlock Text="{Binding FlagCount}" HorizontalAlignment="Center" FontSize="12"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Detail Panel -->
        <Grid Grid.Row="2" RowDefinitions="Auto,Auto,Auto" Margin="0,20,0,0" Name="DetailPanel" IsVisible="False">
            <TextBlock Grid.Row="0" Text="Review Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Border Grid.Row="1" BorderBrush="#3c3c3c" BorderThickness="1" Margin="0,0,0,10" Padding="10" CornerRadius="4">
                <StackPanel>
                    <TextBlock Name="SelectedReviewContent" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Name="FlaggedWordsText" Foreground="OrangeRed" FontWeight="Bold" IsVisible="False"/>
                </StackPanel>
            </Border>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                <Button Name="DeleteButton" Content="Delete Review" Click="DeleteReview_Click" 
                        Background="DarkRed" Foreground="White"/>
                <Button Name="RespondButton" Content="View Response" Click="ViewResponse_Click"/>
            </StackPanel>
        </Grid>

        <!-- Response Dialog -->
        <Grid Name="ResponsePanel" IsVisible="False" ZIndex="100" 
              Background="#80000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border Background="#333333" CornerRadius="8" Width="500" Height="350"
                    BoxShadow="0 4 20 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto" Margin="20">
                    <TextBlock Grid.Row="0" Text="Response to Review" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBox Grid.Row="1" Name="ResponseTextBox" AcceptsReturn="True" TextWrapping="Wrap"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" Spacing="10">
                        <Button Content="Save Response" Click="SaveResponse_Click"/>
                        <Button Content="Cancel" Click="CloseResponse_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>