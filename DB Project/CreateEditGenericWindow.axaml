<UserControl xmlns:local="clr-namespace:DB_Project"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DB_Project.CreateEditGenericWindow"
        x:DataType="local:CreateEditGenericWindow"
        Width="1200" Height="700" Foreground="AliceBlue" >

    <!-- SplitView for Navigation -->
    <SplitView x:Name="SplitView" OpenPaneLength="250" CompactPaneLength="45" DisplayMode="CompactInline" Background="#1e1e1e" PaneBackground="#1e1e1e"> 
        <!-- Sidebar -->
        <SplitView.Pane>
                <local:SidebarControl x:Name="Sidebar" />
        </SplitView.Pane>
        <!-- Main Content Area -->
        <SplitView.Content>
            <Border CornerRadius="12 0 0 0" Background="#2d2d2d" >
                <Grid>
                <ContentControl x:Name="MainContent" />
                <DockPanel>
                    <Button DockPanel.Dock="Top" 
                            Content="Create Card" 
                            Click="OnCreateCardClick"
                            Margin="15" 
                            Height="30" 
                            Background="Beige" 
                            Foreground="Black" />
                    <ScrollViewer>
                        <StackPanel x:Name="CardsContainer" Margin="10" Spacing="10" />
                    </ScrollViewer>
                </DockPanel>
                </Grid>
            </Border>
        </SplitView.Content>
    </SplitView>
</UserControl>