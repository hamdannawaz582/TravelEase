<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DB_Project.CreateEditGenericWindow"
        Title="TravelCode Dashboard" Width="1200" Height="700" Foreground="AliceBlue" DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <!-- SplitView for Navigation -->
    <SplitView IsPaneOpen="{Binding IsPaneOpen}" OpenPaneLength="250" CompactPaneLength="45" DisplayMode="CompactInline" Background="#1e1e1e" PaneBackground="#1e1e1e"> 
        <!-- Left Pane (Navigation Menu) -->
        <SplitView.Pane>
            <StackPanel Spacing="5" Margin="5" >
                <Button Command="{Binding TriggerPaneCommand}">
                    -
                </Button> 
                <ListBox Background="DarkSlateGray" Foreground="White">
                    <ListBoxItem>Items</ListBoxItem>
                    <ListBoxItem>Items</ListBoxItem>
                    <ListBoxItem>Items</ListBoxItem>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>
        <!-- Main Content Area -->
        <SplitView.Content>
            <Border CornerRadius="12 0 0 0" Background="#2d2d2d" >
                <TransitioningContentControl Content="{Binding CurrentPage}"/>
            </Border>
        </SplitView.Content>
    </SplitView>
</Window>