<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DB_Project.HotelSignupPage">
    <Grid>
        <!-- Background (same as login page) -->
        <Image Source="../Assets/LandingPageBg.png" Stretch="UniformToFill" Opacity="0.3"/>
        <Rectangle IsHitTestVisible="False">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#001F2041" Offset="0"/>
                    <GradientStop Color="#FF1F2041" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <!-- Form Content -->
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="300" Background="#33000000">
            <TextBlock Text="Hotel Signup" FontSize="20" Margin="0,0,0,20"/>
            <TextBox Name="UsernameBox" Watermark="Hotel Username" Margin="0,5"/>
            <TextBox Name="NameBox" Watermark="Hotel Name" Margin="0,5"/>
            <TextBox Name="PasswordBox" Watermark="Password" PasswordChar="*" Margin="0,5"/>
            <Button Content="Submit" Click="OnSubmit" Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>